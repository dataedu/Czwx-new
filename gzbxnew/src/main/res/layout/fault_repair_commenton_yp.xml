<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededf1"
    android:orientation="vertical" xmlns:app="http://schemas.android.com/apk/res-auto">
    
     <include
        android:id="@+id/layout_top"
        layout="@layout/core_title_back" />
     
     <ScrollView
         android:layout_width="match_parent"
		 android:layout_height="match_parent">
	     <LinearLayout
	        android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="vertical">
	 
	    <LinearLayout
	        android:background="@drawable/shape_corner"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="15dp"
	        android:layout_marginTop="15dp"
	        android:layout_marginRight="15dp"
	        android:paddingLeft="10dp"
	        android:paddingRight="10dp"
	         android:orientation="vertical">
	        <RelativeLayout
	            android:layout_width="match_parent"
	            android:layout_height="40dp">
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="报修评价"
	                android:textColor="#9c9c9c"
	                android:textSize="15sp"
	                android:layout_centerVertical="true"/>
	            
	        </RelativeLayout>
	        <View
	             android:layout_width="match_parent"
	             android:layout_height="0.8dp"
	             android:background="#e5e5e5"/>
	         <RelativeLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="15dp">
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="报修单号"
	                android:textColor="#9c9c9c"
	                android:textSize="15sp"
	                android:layout_alignParentTop="true"/>
	            
	            <TextView
	                android:id="@+id/bxdh"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textColor="#353535"
	                android:textSize="15sp"
	                android:layout_centerVertical="true"
	                android:layout_alignParentRight="true"
	                 android:layout_marginLeft="80dp"/>
	        </RelativeLayout>
	        
	          <RelativeLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="10dp">
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="报修人"
	                android:textColor="#9c9c9c"
	                android:textSize="15sp"
	                android:layout_alignParentTop="true"
	                />
	            
	            <TextView
	                android:id="@+id/bxr"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textColor="#353535"
	                android:textSize="15sp"
	                android:layout_centerVertical="true"
	                android:layout_alignParentRight="true"
	                 android:layout_marginLeft="80dp"/>
	        </RelativeLayout>
	         
	        <RelativeLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="10dp">
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="报修时间"
	                android:textColor="#9c9c9c"
	                android:textSize="15sp"
	                android:layout_alignParentTop="true"/>
	            
	            <TextView
	                android:id="@+id/bxrq"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textColor="#353535"
	                android:textSize="15sp"
	                android:layout_centerVertical="true"
	                android:layout_alignParentRight="true"
	                 android:layout_marginLeft="80dp"/>
	        </RelativeLayout>
	        
	         <RelativeLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="10dp">
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="报修类型"
	                android:textColor="#9c9c9c"
	                android:textSize="15sp"
	                android:layout_alignParentTop="true"/>
	            
	            <TextView
	                android:id="@+id/bxlx"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textColor="#353535"
	                android:textSize="15sp"
	                android:layout_centerVertical="true"
	                android:layout_alignParentRight="true"
	                 android:layout_marginLeft="80dp"/>
	        </RelativeLayout>
	        
	        <RelativeLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="10dp">
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="维修人员"
	                android:textColor="#9c9c9c"
	                android:textSize="15sp"
	                android:layout_alignParentTop="true"/>
	            
	            <TextView
	                android:id="@+id/wxry"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textColor="#353535"
	                android:textSize="15sp"
	                android:layout_centerVertical="true"
	                android:layout_alignParentRight="true"
	                 android:layout_marginLeft="80dp"/>
	        </RelativeLayout>
	       
	        <RelativeLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="10dp">
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="报修地点"
	                android:textColor="#9c9c9c"
	                android:textSize="15sp"
	                android:layout_alignParentTop="true"/>
	            
	            <TextView
	                android:id="@+id/bxdd"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textColor="#353535"
	                android:textSize="15sp"
	                android:layout_centerVertical="true"
	                android:layout_alignParentRight="true"
	                 android:layout_marginLeft="80dp"/>
	        </RelativeLayout>
	       
	        <RelativeLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="10dp"
	            android:layout_marginBottom="15dp">
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="报修内容"
	                android:textColor="#9c9c9c"
	                android:textSize="15sp"
	                android:layout_alignParentTop="true"/>
	            
	            <TextView
	                android:id="@+id/bxnr"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textColor="#353535"
	                android:textSize="15sp"
	                android:layout_centerVertical="true"
	                android:layout_alignParentRight="true"
	                 android:layout_marginLeft="80dp"/>
	        </RelativeLayout>
	    </LinearLayout>
	    
	     <LinearLayout
	        android:background="@drawable/shape_corner"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_margin="15dp"
	        android:paddingLeft="10dp"
	         android:paddingRight="10dp"
	        android:orientation="vertical">
	    	
	          <RelativeLayout
		            android:layout_width="match_parent"
		            android:layout_height="48dp">
		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="评价等级"
		                android:textColor="#4b6fd1"
		                android:textSize="18sp"
		                android:layout_centerVertical="true"/>

		            <com.dk.mp.apps.gzbxnew.RatingBarView
		                android:layout_alignParentRight="true"
		                android:id="@+id/ratingBar1"
		          		android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_centerVertical="true"
			            app:starCount="5"
		                app:starEmpty="@drawable/rating_no"
		                app:starFill="@drawable/rating_yes"
		                app:starImageSize="20dp" />
		        </RelativeLayout>
		        
		        <View
		             android:layout_width="match_parent"
		             android:layout_height="0.8dp"
		             android:background="#e5e5e5"/>
	         	
			<RelativeLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:minHeight="100dp"
	            android:layout_marginTop="10dp"
	            android:layout_marginBottom="15dp"
	            >
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="评价内容"
	                android:textColor="#9c9c9c"
	                android:textSize="15sp"
	                android:layout_alignParentTop="true"/>
	            
	            <TextView
	                android:id="@+id/pjnr"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textColor="#353535"
	                android:textSize="15sp"
	                android:gravity="top"
	                android:text="东西差的一笔"
	                android:layout_alignParentRight="true"
	                android:layout_marginLeft="80dp"/>
	        </RelativeLayout>	
	     </LinearLayout>
	    </LinearLayout>
     </ScrollView>
</LinearLayout>