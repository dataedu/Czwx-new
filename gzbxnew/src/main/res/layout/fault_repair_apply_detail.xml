<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#ededf1"
	android:orientation="vertical" >

	<include
		android:id="@+id/layout_top"
		layout="@layout/core_title_back" />

	<LinearLayout
		android:id="@+id/layout_bottom"
		android:layout_width="match_parent"
		android:layout_height="60dip"
		android:background="#ffffff"
		android:layout_alignParentBottom="true"
		android:gravity="center_vertical"
		android:visibility="gone">
		<Button
			android:id="@+id/ok"
			android:layout_width="match_parent"
			android:layout_height="44dp"
			android:background="@drawable/shape_corner_button"
			android:layout_marginLeft="15dp"
			android:layout_marginRight="15dp"
			android:text="重新提交"
			android:textSize="17sp"
			android:textColor="#ffffff"/>
	</LinearLayout>

	<ScrollView
		android:layout_above="@id/layout_bottom"
		android:layout_below="@id/layout_top"
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">
			<LinearLayout
				android:background="@drawable/shape_corner"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="15dip"
				android:paddingLeft="10dp"
				android:paddingRight="10dp"
				android:orientation="vertical">
				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="40dp">
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="报修信息"
						android:textColor="#9c9c9c"
						android:textSize="15sp"
						android:layout_centerVertical="true"/>

				</RelativeLayout>
				<View
					android:layout_width="match_parent"
					android:layout_height="0.8dp"
					android:background="#e5e5e5"/>
				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dp">
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="报修单号"
						android:textColor="#9c9c9c"
						android:textSize="15sp"
						android:layout_alignParentTop="true"/>

					<TextView
						android:id="@+id/bxdh"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="报修单号"
						android:textColor="#353535"
						android:textSize="15sp"
						android:layout_centerVertical="true"
						android:layout_alignParentRight="true"
						android:layout_marginLeft="80dp"/>
				</RelativeLayout>

				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="5dp">
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="报修人"
						android:textColor="#9c9c9c"
						android:textSize="15sp"
						android:layout_alignParentTop="true"
						/>

					<TextView
						android:id="@+id/bxr"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="#353535"
						android:textSize="15sp"
						android:layout_centerVertical="true"
						android:layout_alignParentRight="true"
						android:layout_marginLeft="80dp"/>
				</RelativeLayout>

				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="5dp">
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="报修时间"
						android:textColor="#9c9c9c"
						android:textSize="15sp"
						android:layout_alignParentTop="true"/>

					<TextView
						android:id="@+id/bxrq"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="#353535"
						android:textSize="15sp"
						android:layout_centerVertical="true"
						android:layout_alignParentRight="true"
						android:layout_marginLeft="80dp"/>
				</RelativeLayout>

				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="5dp">
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="报修类型"
						android:textColor="#9c9c9c"
						android:textSize="15sp"
						android:layout_alignParentTop="true"/>

					<TextView
						android:id="@+id/bxlx"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="#353535"
						android:textSize="15sp"
						android:layout_centerVertical="true"
						android:layout_alignParentRight="true"
						android:layout_marginLeft="80dp"/>
				</RelativeLayout>

				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="5dp">
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="维修类别"
						android:textColor="#9c9c9c"
						android:textSize="15sp"
						android:layout_alignParentTop="true"/>

					<TextView
						android:id="@+id/wxlb"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="#353535"
						android:textSize="15sp"
						android:layout_centerVertical="true"
						android:layout_alignParentRight="true"
						android:layout_marginLeft="80dp"/>
				</RelativeLayout>

				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="5dp">
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="维修人员"
						android:textColor="#9c9c9c"
						android:textSize="15sp"
						android:layout_alignParentTop="true"/>

					<TextView
						android:id="@+id/wxry"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="#353535"
						android:textSize="15sp"
						android:layout_centerVertical="true"
						android:layout_alignParentRight="true"
						android:layout_marginLeft="80dp"/>
				</RelativeLayout>

				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="5dp">
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="报修地点"
						android:textColor="#9c9c9c"
						android:textSize="15sp"
						android:layout_alignParentTop="true"/>

					<TextView
						android:id="@+id/bxdd"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="#353535"
						android:textSize="15sp"
						android:layout_centerVertical="true"
						android:layout_alignParentRight="true"
						android:layout_marginLeft="80dp"/>
				</RelativeLayout>

				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="5dp">
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="报修部门"
						android:textColor="#9c9c9c"
						android:textSize="15sp"
						android:layout_alignParentTop="true"/>

					<TextView
						android:id="@+id/bxbm"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="#353535"
						android:textSize="15sp"
						android:layout_centerVertical="true"
						android:layout_alignParentRight="true"
						android:layout_marginLeft="80dp"/>
				</RelativeLayout>

				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="5dp">
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="报修内容"
						android:textColor="#9c9c9c"
						android:textSize="15sp"
						android:layout_alignParentTop="true"/>

					<TextView
						android:id="@+id/bxnr"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="报修内容"
						android:textColor="#353535"
						android:textSize="15sp"
						android:layout_centerVertical="true"
						android:layout_alignParentRight="true"
						android:layout_marginLeft="80dp"/>
				</RelativeLayout>

				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="5dp"
					android:layout_marginBottom="10dp">
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="报修电话"
						android:textColor="#9c9c9c"
						android:textSize="15sp"
						android:layout_alignParentTop="true"/>

					<TextView
						android:id="@+id/bxrlxdh"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="#353535"
						android:textSize="15sp"
						android:layout_centerVertical="true"
						android:layout_alignParentRight="true"
						android:layout_marginLeft="80dp"/>
				</RelativeLayout>
			</LinearLayout>

			<ImageView
				android:id="@+id/img_detail"
				android:background="@drawable/shape_corner"
				android:layout_width="match_parent"
				android:layout_height="120dp"
				android:layout_marginLeft="15dip"
				android:layout_marginBottom="15dip"
				android:layout_marginRight="15dip"
				android:visibility="gone"
				android:scaleType="centerCrop">
			</ImageView>


			<LinearLayout
				android:id="@+id/czjg_lin"
				android:background="@drawable/shape_corner"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="15dip"
				android:layout_marginBottom="15dip"
				android:layout_marginRight="15dip"
				android:paddingLeft="10dp"
				android:paddingRight="10dp"
				android:orientation="vertical">
				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="48dp">
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="操作结果"
						android:textColor="#4b6fd1"
						android:textSize="17sp"
						android:layout_centerVertical="true"/>

					<ImageView
						android:id="@+id/czjg"
						android:layout_width="46dp"
						android:layout_height="40dp"
						android:layout_alignParentRight="true"
						android:layout_centerVertical="true"/>
				</RelativeLayout>
				<View
					android:layout_width="match_parent"
					android:layout_height="0.8dp"
					android:background="#e5e5e5"/>

				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dp">
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="操作环节"
						android:textColor="#9c9c9c"
						android:textSize="15sp"
						android:layout_alignParentTop="true"/>

					<TextView
						android:id="@+id/czhj"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="#353535"
						android:textSize="15sp"
						android:layout_centerVertical="true"
						android:layout_alignParentRight="true"
						android:layout_marginLeft="80dp"/>
				</RelativeLayout>
				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="5dp">
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="操作者"
						android:textColor="#9c9c9c"
						android:textSize="15sp"
						android:layout_alignParentTop="true"/>

					<TextView
						android:id="@+id/czz"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="#353535"
						android:textSize="15sp"
						android:layout_centerVertical="true"
						android:layout_alignParentRight="true"
						android:layout_marginLeft="80dp"/>
				</RelativeLayout>
				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="5dp">
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="操作时间"
						android:textColor="#9c9c9c"
						android:textSize="15sp"
						android:layout_alignParentTop="true"/>

					<TextView
						android:id="@+id/czsj"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="#353535"
						android:textSize="15sp"
						android:layout_centerVertical="true"
						android:layout_alignParentRight="true"
						android:layout_marginLeft="80dp"/>
				</RelativeLayout>
				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="5dp"
					android:layout_marginBottom="10dp">
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="操作意见"
						android:textColor="#9c9c9c"
						android:textSize="15sp"
						android:layout_alignParentTop="true"/>

					<TextView
						android:id="@+id/czyj"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="#353535"
						android:textSize="15sp"
						android:layout_centerVertical="true"
						android:layout_alignParentRight="true"
						android:layout_marginLeft="80dp"/>
				</RelativeLayout>

			</LinearLayout>
		</LinearLayout>
	</ScrollView>

</RelativeLayout>