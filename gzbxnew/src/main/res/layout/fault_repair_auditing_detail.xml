<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#5f84e9" >
     <include
        android:id="@+id/layout_top"
        layout="@layout/core_title_back" />
	<ScrollView
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="#5f84e9">
	    <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="vertical"
		   	android:background="@drawable/shape_corner"
		   	android:layout_marginTop="15dp"
		   	android:layout_marginLeft="15dp"
		   	android:layout_marginRight="15dp"
		   	android:layout_marginBottom="30dp"
		   	android:paddingLeft="10dip"
		   	android:paddingRight="10dip">
		   	<TextView
		   	    android:id="@+id/bxdh"
		   	    android:layout_width="match_parent"
		   	    android:layout_height="60dp"
		   	    android:textColor="#353535"
		   	    android:textSize="18sp"
		   	    android:gravity="center_vertical"/>
		   	<View
		   	    android:layout_width="match_parent"
		   	    android:layout_height="0.8dip"
		   	    android:background="#e5e5e5"/>
		   	
		   	<com.dk.mp.apps.gzbxnew.widget.FlowLayout
		   	    android:id="@+id/linearLayouts"
		   	    android:layout_width="match_parent"
		   	    android:layout_height="wrap_content"
		   	    android:layout_marginTop="15dip">
		   	    <LinearLayout
		   	        android:id="@+id/lin_l"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:background="@drawable/shape_corner_radius11" 
				    android:orientation="horizontal"
				    android:gravity="center_vertical"
				    android:layout_marginBottom="5dip"
				    android:layout_marginRight="15dip"
			   	    android:paddingTop="5dp"
			   	    android:paddingBottom="5dp">
				    
				    <ImageView
				        android:layout_width="12dp"
				        android:layout_height="12dp"
				        android:background="@drawable/gzbx_l"/>
				    <TextView
				        android:id="@+id/txt_l"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginLeft="3dp"
				        android:textColor="@color/white"
				        android:textSize="12sp"
				        android:lineSpacingMultiplier="1.2"/>
				</LinearLayout>
				
		   	     <LinearLayout
		   	        android:id="@+id/lin_d"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:background="@drawable/shape_corner_radius11" 
				    android:orientation="horizontal"
				    android:gravity="center_vertical"
				    android:layout_marginBottom="5dip"
				    android:layout_marginRight="15dip"
			   	    android:paddingTop="5dp"
			   	    android:paddingBottom="5dp">
				    
				    <ImageView
				        android:layout_width="12dp"
				        android:layout_height="12dp"
				        android:background="@drawable/gzbx_d"/>
				    <TextView
				         android:id="@+id/txt_d"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginLeft="3dp"
				        android:textColor="@color/white"
				        android:textSize="12sp"
				        android:lineSpacingMultiplier="1.2"/>
				</LinearLayout>
				
		   	     <LinearLayout
		   	        android:id="@+id/lin_r"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:background="@drawable/shape_corner_radius11" 
				    android:orientation="horizontal"
				    android:gravity="center_vertical"
				    android:layout_marginBottom="5dip"
				    android:layout_marginRight="15dip"
			   	    android:paddingTop="5dp"
			   	    android:paddingBottom="5dp">
				    
				    <ImageView
				        android:layout_width="12dp"
				        android:layout_height="12dp"
				        android:background="@drawable/gzbx_r"/>
				    <TextView
				         android:id="@+id/txt_r"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginLeft="3dp"
				        android:textColor="@color/white"
				        android:textSize="12sp"
				       android:lineSpacingMultiplier="1.2"/>
				</LinearLayout>
		   	</com.dk.mp.apps.gzbxnew.widget.FlowLayout>
		   	
		   	
		   	<TextView
		   	    android:id="@+id/content"
		   	    android:layout_width="match_parent"
		   	    android:layout_height="wrap_content"
		   	    android:lineSpacingMultiplier="1.2"
		   	    android:layout_marginTop="10dip"
		   	    android:layout_marginBottom="15dip"
		   	    android:textColor="#7f7f7f"
		   	    android:textSize="15sp"/>
		   	
		   <RelativeLayout
		       android:layout_width="wrap_content"
		       android:layout_height="wrap_content"
		       android:paddingTop="15dip"
		       android:paddingBottom="15dip">
		       <TextView
		           android:id="@+id/bxr"
		           android:layout_width="wrap_content"
		           android:layout_height="wrap_content"
		           android:textColor="#acacac"
		           android:textSize="12sp"/>
		       <TextView
		           android:id="@+id/bxsj"
		           android:layout_width="wrap_content"
		           android:layout_height="wrap_content"
		           android:textColor="#acacac"
		           android:textSize="12sp"
		           android:layout_alignParentRight="true"/>
		  </RelativeLayout>
		  
		   <View
		   	    android:layout_width="match_parent"
		   	    android:layout_height="0.8dip"
		   	    android:background="#e5e5e5"/>
		   
		   <LinearLayout
		       android:id="@+id/pass"
		       android:layout_width="match_parent"
		       android:layout_height="44dip"
		       android:background="@drawable/shape_corner_button"
		       android:layout_marginTop="25dip"
		       android:gravity="center">
		       <ImageView
		           android:layout_width="25dip"
		           android:layout_height="25dip"
		           android:src="@drawable/gzbx_tg"/>
		       
		       <TextView
		           android:layout_width="wrap_content"
		           android:layout_height="wrap_content"
		           android:text="通过    "
		           android:textSize="17sp"
		           android:textColor="#ffffff"
		           android:layout_marginLeft="10dip">
		       </TextView>
		   </LinearLayout>
		   
		   <LinearLayout
		       android:id="@+id/notpass"
		       android:layout_width="match_parent"
		       android:layout_height="44dip"
		       android:background="@drawable/shape_corner_button"
		       android:layout_marginTop="25dip"
		       android:gravity="center">
		       <ImageView
		           android:layout_width="25dip"
		           android:layout_height="25dip"
		           android:src="@drawable/gzbx_btg"/>
		       
		       <TextView
		           android:layout_width="wrap_content"
		           android:layout_height="wrap_content"
		           android:text="不通过"
		           android:textSize="17sp"
		           android:textColor="#ffffff"
		           android:layout_marginLeft="10dip">
		       </TextView>
		   </LinearLayout>
		   
		   <LinearLayout
		       android:id="@+id/retract"
		       android:layout_width="match_parent"
		       android:layout_height="44dip"
		       android:background="@drawable/shape_corner_button"
		       android:layout_marginTop="25dip"
		       android:layout_marginBottom="25dip"
		       android:gravity="center">
		       <ImageView
		           android:layout_width="25dip"
		           android:layout_height="25dip"
		           android:src="@drawable/gzbx_th"/>
		       
		       <TextView
		           android:layout_width="wrap_content"
		           android:layout_height="wrap_content"
		           android:text="退回    "
		           android:textSize="17sp"
		           android:textColor="#ffffff"
		           android:layout_marginLeft="10dip">
		       </TextView>
		   </LinearLayout>
	    </LinearLayout>
    </ScrollView>
</LinearLayout>