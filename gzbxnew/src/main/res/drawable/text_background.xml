<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  
    <item android:state_selected="true" android:drawable="@drawable/text_background_selected"/>
    <item android:state_selected="false" android:drawable="@drawable/text_background_unselected"/>
    <!-- 非触摸模式下获得焦点并单击时的字体颜色 -->  
	<item
		android:state_focused="true"
		android:state_pressed="true"
		android:drawable="@drawable/text_background_selected"/>
    <item android:drawable="@drawable/text_background_unselected"/>
</selector>