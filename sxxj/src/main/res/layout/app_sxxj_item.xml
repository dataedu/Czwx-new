<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dip"
    android:background="@drawable/ripple_bg_while">
    <ImageView
        android:id="@+id/img"
        android:layout_width="40dip"
        android:src="@drawable/yue"
        android:layout_height="40dip">
    </ImageView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/image60"
        android:layout_marginRight="10dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/riqi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="555555555555"
            android:textColor="#212121"
            android:textSize="?attr/textSize14"
            android:lineSpacingMultiplier="1.3"/>

        <TextView
            android:id="@+id/zt"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="4444444444444"
            android:textColor="#212121"
            android:textSize="?attr/textSize14"
            android:lineSpacingMultiplier="1.3"/>

        <TextView
            android:id="@+id/lx"
            android:layout_below="@id/riqi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="100dp"
            android:textColor="#9c9c9c"
            android:text="4444444444444"
            android:textSize="?attr/textSize12"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>


</LinearLayout>