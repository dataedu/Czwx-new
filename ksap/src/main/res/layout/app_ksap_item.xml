<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_bg_while"
    android:orientation="horizontal"
    android:padding="10dip">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/ksrq"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:gravity="bottom"
            android:layout_alignParentTop="true"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.3"
            android:maxLines="2"
            android:text="04-18"
            android:textColor="#2196F3"
            android:textSize="17sp" />

        <TextView
            android:gravity="bottom"
            android:paddingLeft="5dip"
            android:paddingBottom="2dip"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:layout_toRightOf="@+id/ksrq"
            android:minWidth="100dp"
            android:text="(考试日期)"
            android:textColor="#2196F3"
            android:textSize="12sp" />


        <LinearLayout
            android:layout_below="@+id/ksrq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dip"
            android:id="@+id/hang"
            android:background="@drawable/ripple_bg_while">

            <TextView

                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="时间"
                android:textColor="#2196F3"
                android:textSize="?attr/textSize12"
                android:lineSpacingMultiplier="1.3"/>
            <TextView

                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:minWidth="100dp"
                android:textColor="#2196F3"
                android:text="课程"
                android:textSize="?attr/textSize12"
                android:layout_alignParentBottom="true"/>

            <TextView

                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:minWidth="100dp"
                android:textColor="#2196F3"
                android:text="考试地点"
                android:textSize="?attr/textSize12"
                android:layout_alignParentBottom="true"/>





        </LinearLayout>

        <com.dk.mp.ksap.widget.ChildLiistView
            android:id="@+id/kclist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/hang"


            android:cacheColorHint="#00000000"
            android:divider="#00000000"
            android:dividerHeight="0dip"
            android:listSelector="#00000000"

            android:orientation="vertical">


        </com.dk.mp.ksap.widget.ChildLiistView>
    </RelativeLayout>


</LinearLayout>